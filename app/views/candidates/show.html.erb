<div class="max-w-xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4"><%= @candidate.name %></h1>

  <div class="bg-white shadow p-6 rounded border">
    <p><strong>Email:</strong> <%= @candidate.email %></p>
    <p class="mt-4"><strong>Resumo:</strong></p>
    <p class="text-gray-700 whitespace-pre-line"><%= @candidate.resume %></p>

    <div class="mt-6 flex gap-4">
      <%= link_to "Editar", edit_candidate_path(@candidate), class: "text-blue-600 hover:underline" %>
      <%= link_to "Voltar", candidates_path, class: "text-gray-600 hover:underline" %>
    </div>
  </div>
</div>
