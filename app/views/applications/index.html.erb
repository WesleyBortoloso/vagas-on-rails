<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Candidaturas</h1>

  <% @applications.each do |application| %>
    <div class="bg-white p-4 shadow rounded mb-4 border">
      <p><strong>Candidato:</strong> <%= application.candidate.name %></p>
      <p><strong>Vaga:</strong> <%= application.job.title %></p>
      <p><strong>Status:</strong> <%= application.status.capitalize %></p>

      <div class="mt-2 flex gap-3 text-sm">
        <%= link_to "Ver", application_path(application), class: "text-blue-600 hover:underline" %>
        <%= link_to "Editar", edit_application_path(application), class: "text-yellow-600 hover:underline" %>
        <%= link_to "Excluir", application_path(application), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>

  <%= link_to "Nova Candidatura", new_application_path, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
</div>
