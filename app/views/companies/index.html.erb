<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Empresas</h1>

  <% @companies.each do |company| %>
    <div class="bg-white p-4 shadow rounded mb-4 border">
      <h2 class="font-semibold text-lg"><%= company.name %></h2>
      <p class="text-sm text-gray-600"><%= company.description %></p>

      <div class="mt-2 flex gap-3 text-sm">
        <%= link_to "Ver", company_path(company), class: "text-blue-600 hover:underline" %>
        <%= link_to "Editar", edit_company_path(company), class: "text-yellow-600 hover:underline" %>
        <%= link_to "Excluir", company_path(company), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>

  <%= link_to "Nova Empresa", new_company_path, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
</div>
