<div class="max-w-xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Detalhes da Candidatura</h1>

  <div class="bg-white shadow p-6 rounded border">
    <p><strong>Candidato:</strong> <%= @application.candidate.name %></p>
    <p><strong>Vaga:</strong> <%= @application.job.title %></p>
    <p><strong>Status:</strong> <%= @application.status.capitalize %></p>

    <div class="mt-6 flex gap-4">
      <%= link_to "Editar", edit_application_path(@application), class: "text-blue-600 hover:underline" %>
      <%= link_to "Voltar", applications_path, class: "text-gray-600 hover:underline" %>
    </div>
  </div>
</div>
