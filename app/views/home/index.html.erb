<div class="max-w-6xl mx-auto px-6 py-16 space-y-16">
  <section class="text-center">
    <h1 class="text-4xl font-extrabold text-blue-700">Boas-vindas ao Vagas do FabÃ£o</h1>
    <p class="text-gray-700 mt-3 text-lg">Gerencie empresas, candidatos e candidaturas com facilidade.</p>

   <div class="mt-6 flex justify-center flex-wrap gap-4">
    <%= link_to "Nova Empresa", new_company_path,
      class: "inline-flex justify-center items-center px-6 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-md shadow hover:bg-blue-700 transition duration-150 ease-in-out" %>

    <%= link_to "Novo Candidato", new_candidate_path,
      class: "inline-flex justify-center items-center px-6 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-md shadow hover:bg-blue-700 transition duration-150 ease-in-out" %>
  </div>
  </section>

  <section>
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Vagas Recentes</h2>
    <div class="grid gap-6">
      <% Job.includes(:company).last(5).reverse.each do |job| %>
        <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 hover:shadow-lg transition duration-200">
          <h3 class="text-lg font-semibold text-blue-800"><%= job.title %></h3>
          <p class="text-gray-600 mt-1"><%= truncate(job.description, length: 100) %></p>
          <p class="text-sm text-gray-500 mt-1">Empresa: <%= job.company.name %></p>
          <div class="mt-3">
            <%= link_to "Ver detalhes", job_path(job),
              class: "inline-block text-sm text-blue-600 hover:underline font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
