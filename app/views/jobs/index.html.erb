<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Vagas Dispon√≠veis</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @jobs.each do |job| %>
      <div class="bg-white shadow-md rounded-xl p-4 border border-gray-200">
        <h2 class="text-xl font-semibold mb-2"><%= job.title %></h2>
        <p class="text-gray-600 mb-1"><strong>Tipo:</strong> <%= job.job_type %></p>
        <p class="text-gray-600 mb-1"><strong>Local:</strong> <%= job.location %></p>
        <p class="text-gray-500 text-sm mb-3"><%= truncate(job.description, length: 100) %></p>
        <p class="text-sm text-gray-400 mb-4">Empresa: <%= job.company.name %></p>

        <div class="flex justify-between items-center">
          <%= link_to "Ver", job_path(job), class: "text-blue-600 hover:underline" %>
          <%= link_to "Editar", edit_job_path(job), class: "text-yellow-600 hover:underline" %>
          <%= link_to "Excluir", job_path(job), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
