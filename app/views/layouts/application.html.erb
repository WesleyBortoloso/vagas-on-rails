<!DOCTYPE html>
<html>
  <head>
    <title>Vagas do Fabão</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 text-gray-800 font-sans min-h-screen">
    <nav class="bg-white shadow fixed top-0 w-full z-10">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-blue-700">Vagas do Fabão</h1>
        <div class="space-x-6 text-sm font-medium">
          <%= link_to "Início", root_path, class: "text-gray-700 hover:text-blue-600" %>
          <%= link_to "Vagas", jobs_path, class: "text-gray-700 hover:text-blue-600" %>
          <%= link_to "Empresas", companies_path, class: "text-gray-700 hover:text-blue-600" %>
          <%= link_to "Candidatos", candidates_path, class: "text-gray-700 hover:text-blue-600" %>
          <%= link_to "Candidaturas", applications_path, class: "text-gray-700 hover:text-blue-600" %>
        </div>
      </div>
    </nav>

    <main class="pt-24 max-w-6xl mx-auto px-4">
      <% if notice %>
        <div class="bg-green-100 border border-green-300 text-green-800 p-3 mb-4 rounded-md">
          <%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-300 text-red-800 p-3 mb-4 rounded-md">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
