<div class="max-w-5xl mx-auto px-4 py-10">
  <!-- Empresa -->
  <div class="bg-white p-6 rounded-md shadow mb-8">
    <h1 class="text-3xl font-bold text-blue-700 mb-2"><%= @company.name %></h1>
    <p class="text-gray-600 mb-4"><%= @company.description %></p>

    <div class="flex gap-4">
      <%= link_to "Editar Empresa", edit_company_path(@company), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      <%= link_to "Excluir Empresa", company_path(@company), method: :delete, data: { confirm: "Tem certeza?" }, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      <%= link_to "Criar nova vaga", new_company_job_path(@company), class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  </div>

  <!-- Vagas da empresa -->
  <div class="bg-white p-6 rounded-md shadow">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Vagas abertas</h2>

    <% if @company.jobs.any? %>
      <% @company.jobs.each do |job| %>
        <div class="border border-gray-200 rounded-md p-4 mb-4 hover:shadow transition">
          <h3 class="text-xl font-semibold text-blue-800"><%= job.title %></h3>
          <p class="text-gray-600 mt-1"><%= truncate(job.description, length: 100) %></p>
          <%= link_to "Ver detalhes", job_path(job), class: "text-blue-600 hover:underline text-sm mt-2 inline-block" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">Esta empresa ainda nÃ£o possui vagas cadastradas.</p>
    <% end %>
  </div>
</div>
